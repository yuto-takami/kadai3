<!DOCTYPE html>
<html>
  <head>
  </head>

  <body>

    <table>
      <h2>Books</h2>
      <thead>
        <tr>
          <td>Title</td>
          <td>Opinion</td>
        </tr>
      </thead>

      <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
            <%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
      </tbody>
    </table>



    <h2>New Book</h2>
    <%= form_with model: @book, local:true do |f| %>
    <div>Title</div>
    <%= f.text_field :title %>
    <div>Opinion</div>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
    <% end %>


  </body>
</html>