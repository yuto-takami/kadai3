 <!DOCTYPE html>
<html>
  <head>
  </head>

  <body>
    <div class="col-lg-4">
      <h2>Book detail</h2>
      <%= form_with model: @books, local:true do |f| %>
      <div>Title</div>
      <%= f.text_field :title %>
      <div>Opinion</div>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
      <% end %>
    </div>


    <div class="col-lg-8">
      <table class="table table-striped">
        <tbody>
          <tr>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td>
            <% if @book.user == current_user %>
               <%= link_to "Edit", edit_book_path(@book.id) %>
               <%= link_to "Destroy", book_path(@book), method: :delete %>
            <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </body>
</html>