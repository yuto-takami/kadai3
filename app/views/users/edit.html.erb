<!DOCTYPE html>
<html>
  <head>
  </head>

  <body>
    <div class="container">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <ul>
            <%= @user.errors.count %>error found
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model:@user, local:true do |f| %>
        <div class="row">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName"%>
        </div>
        <div class="row">
          <label for="inputImage">Image</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>
        <div class="row">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %>
          <%= f.submit "Update User" %>
        </div>
      <% end %>
    </div>
  </body>
</html>