<!DOCTYPE html>
<html>
  <head>
  </head>

  <body>
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
    <div class="container">
      <div class="row">
        <div class="col-lg-4">
          <%= render 'users/list', user: @user, book: @book %>
        </div>
        
      
        <div class="col-lg-8">
          <h2>Books</h2>
          <table class="table table-striped">
            <thead>
              <tr>
                <td>Title</td>
                <td>Opinion</td>
              </tr>
            </thead>
        
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                  <% end %>
                </td>
                <td><%= book.body %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>