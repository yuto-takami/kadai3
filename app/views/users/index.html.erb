<!DOCTYPE html>
<html>
  <head>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-lg-4">
          <%= render 'users/list', user: @user, book: @book %>
        </div>
      

        <div class="col-lg-8">
          <h2>Users</h2>
          <table class="table table-striped">
            <thead>
              <tr>
                <td>image</td>
                <td>name</td>
              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= user.profile_image_id %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(current_user.id) %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>